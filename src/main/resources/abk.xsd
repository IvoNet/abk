<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified"
           targetNamespace="http://jaxb.abk.tjonahen.nl"
           xmlns:tns="http://jaxb.abk.tjonahen.nl">

    <xs:complexType name="rekening">
        <xs:sequence>
            <xs:element name="id" type="xs:integer"/>
            <xs:element name="rekening" type="xs:string"/>
            <xs:element name="naam" type="xs:string"/>
            <xs:element name="beginSaldo" type="xs:decimal"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="kostenplaats">
        <xs:sequence>
            <xs:element name="id" type="xs:integer"/>
            <xs:element name="naam" type="xs:string"/>
            <xs:element name="subkostenplaatsen" type="tns:kostenplaats" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
